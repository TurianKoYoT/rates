<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <%= form_tag(update_rates_data_path, remote: true) do %>
          <%= submit_tag('Обновить данные извне', class: 'btn btn-primary btn-lg') %>
      <% end %>
    </div>
  </div>

  <div class="row text-center">
    <% @rates.each do |rate| %>
      <div class="col-md-4 col-lg-3">
        <%= render 'rate_widget', rate: rate %>
      </div>
    <% end %>
  </div>
</div>
